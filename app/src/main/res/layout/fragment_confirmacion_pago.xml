<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="#D1D1D1"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvMetodoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pago con QR"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/tvMontoConfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 0.00"
            android:textColor="#2E7D32"
            android:textSize="32sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/ivQrCode"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/mi_codigo_qr"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDatosPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#EEEEEE"
            app:cardBackgroundColor="#F9F9F9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/tvNombreDestino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre: Juan Pérez"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvNumeroDestino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número: 300 123 4567"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFinalizarPago"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:text="LIBERAR CLIENTE"
            android:backgroundTint="#546E7A"
            app:icon="@drawable/ic_exit_to_app"
            app:cornerRadius="12dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>