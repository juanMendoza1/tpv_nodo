<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardBackgroundColor="#1AFFFFFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="#33FFFFFF"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvCantBolsa"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="1x"
            android:textColor="#FFD600"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/bg_avatar_circle"
            android:backgroundTint="#1AFFD600" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvNombreBolsa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CERVEZA POKER"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="13sp"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/tvFechaBolsa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:45 PM"
                android:textColor="#80FFFFFF"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPrecioBolsa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5.500"
                android:textColor="#00E5FF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:shadowColor="#00E5FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10" />

            <TextView
                android:id="@+id/tvEstadoBolsa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENTREGADO"
                android:textColor="#4CAF50"
                android:textSize="8sp"
                android:textStyle="bold"
                android:letterSpacing="0.1" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>