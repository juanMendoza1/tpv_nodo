<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F0F">

    <View
        android:id="@+id/bgArenaBase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_arena_dark_pattern" />

    <View
        android:id="@+id/bgAzulGarena"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="@drawable/gradient_blue_arena"
        app:layout_constraintEnd_toStartOf="@+id/guidelineCenter"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/bgRojoGarena"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="@drawable/gradient_red_arena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guidelineCenter" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <LinearLayout
        android:id="@+id/panelAccionesLateral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="12dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExpandirArena"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginBottom="12dp"
            app:backgroundTint="#4D000000"
            app:cornerRadius="26dp"
            app:icon="@drawable/ic_fullscreen"
            app:iconSize="24dp"
            app:iconTint="#FFFFFF"
            app:strokeColor="#4DFFFFFF"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fabSeleccionarMunicion"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginBottom="4dp"
            app:backgroundTint="#4D000000"
            app:cornerRadius="26dp"
            app:icon="@drawable/ic_shopping_bag"
            app:iconSize="24dp"
            app:iconTint="#FFD600"
            app:strokeColor="#FFD600"
            app:strokeWidth="1.5dp" />

        <LinearLayout
            android:id="@+id/containerBolsaMinimizada"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_badge_monto"
            android:backgroundTint="#4D000000"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/tvProductoEnJuego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textColor="#FFD600"
                android:textSize="9sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfigReglas"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginBottom="12dp"
            app:backgroundTint="#4D000000"
            app:cornerRadius="26dp"
            app:icon="@drawable/ic_settings"
            app:iconSize="22dp"
            app:iconTint="#FFFFFF"
            app:strokeColor="#4DFFFFFF"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistorialDuelo"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:backgroundTint="#4D000000"
            app:cornerRadius="26dp"
            app:icon="@drawable/ic_history"
            app:iconSize="24dp"
            app:iconTint="#FFD600"
            app:strokeColor="#4DFFD600"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/scrollMarcadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:scrollbars="none"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/containerMarcadoresDinamicos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_scoreboard_frame"
            android:backgroundTint="#33000000"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp" />
    </HorizontalScrollView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@id/btnFinalizarDuelo"
        app:layout_constraintTop_toBottomOf="@id/scrollMarcadores">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/containerGuerrerosDinamicos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:flexWrap="wrap"
            app:justifyContent="center" />
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFinalizarDuelo"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#1A000000"
        android:text="FINALIZAR BATALLA"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#FFD600"
        app:strokeWidth="2dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieCelebration"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:elevation="30dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_rawRes="@raw/donald" />

</androidx.constraintlayout.widget.ConstraintLayout>