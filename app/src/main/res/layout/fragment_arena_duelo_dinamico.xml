<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <View
        android:id="@+id/bgArenaBase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_arena_dark_pattern" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:id="@+id/bgAzulGarena"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="@drawable/gradient_blue_arena"
        app:layout_constraintEnd_toStartOf="@+id/guidelineCenter"
        app:layout_constraintStart_toEndOf="@id/guidelineVAR" />

    <View
        android:id="@+id/bgRojoGarena"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="@drawable/gradient_red_arena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guidelineCenter" />

    <FrameLayout
        android:id="@+id/containerCameraVAR"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="#000000"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVAR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/viewFinder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:implementationMode="compatible"
            app:scaleType="fillCenter" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:background="@drawable/overlay_camera_frame" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutContenidoArena"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineVAR">

        <TextView
            android:id="@+id/tvReglaActiva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="35dp"
            android:alpha="0.6"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="REGLA: NO DEFINIDA"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <FrameLayout
            android:id="@+id/btnVerPendientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:clickable="false"
                android:focusable="false"
                app:backgroundTint="#4D000000"
                app:cornerRadius="26dp"
                app:icon="@drawable/ic_shopping_basket"
                app:iconSize="24dp"
                app:iconTint="#FF1744"
                app:strokeColor="#4DFF1744"
                app:strokeWidth="1dp" />

            <TextView
                android:id="@+id/tvBadgePendientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="3"
                android:textColor="#FF1744"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />
        </FrameLayout>

        <HorizontalScrollView
            android:id="@+id/scrollMarcadores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:elevation="10dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/containerMarcadoresDinamicos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_scoreboard_frame"
                android:backgroundTint="#33000000"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp" />
        </HorizontalScrollView>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:clipToPadding="false"
            app:layout_constraintBottom_toTopOf="@id/btnFinalizarDuelo"
            app:layout_constraintTop_toBottomOf="@id/scrollMarcadores">

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/containerGuerrerosDinamicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:flexWrap="wrap"
                app:justifyContent="center" />
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFinalizarDuelo"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="#1A000000"
            android:text="FINALIZAR BATALLA"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="#FFD600"
            app:strokeWidth="2dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/panelAccionesLateral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="12dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExpandirArena"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginBottom="12dp"
            app:backgroundTint="#4D000000"
            app:cornerRadius="26dp"
            app:icon="@drawable/ic_fullscreen"
            app:iconSize="24dp"
            app:iconTint="#FFFFFF"
            app:strokeColor="#4DFFFFFF"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVAR"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginBottom="12dp"
            app:backgroundTint="#4DFF1744"
            app:cornerRadius="26dp"
            app:icon="@drawable/ic_videocam"
            app:iconSize="24dp"
            app:iconTint="#FFFFFF"
            app:strokeColor="#FF1744"
            app:strokeWidth="1.5dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fabSeleccionarMunicion"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginBottom="4dp"
            app:backgroundTint="#4D000000"
            app:cornerRadius="26dp"
            app:icon="@drawable/ic_shopping_bag"
            app:iconSize="24dp"
            app:iconTint="#FFD600"
            app:strokeColor="#FFD600"
            app:strokeWidth="1.5dp" />

        <LinearLayout
            android:id="@+id/containerBolsaMinimizada"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_badge_monto"
            android:backgroundTint="#4D000000"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="4dp">
            <TextView
                android:id="@+id/tvProductoEnJuego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textColor="#FFD600"
                android:textSize="9sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfigReglas"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginBottom="12dp"
            app:backgroundTint="#4D000000"
            app:cornerRadius="26dp"
            app:icon="@drawable/ic_settings"
            app:iconSize="22dp"
            app:iconTint="#FFFFFF"
            app:strokeColor="#4DFFFFFF"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistorialDuelo"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:backgroundTint="#4D000000"
            app:cornerRadius="26dp"
            app:icon="@drawable/ic_history"
            app:iconSize="24dp"
            app:iconTint="#FFD600"
            app:strokeColor="#4DFFD600"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panelConfigDeslizable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2080808"
        android:elevation="40dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:translationX="1000dp"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGLAS Y SEGURIDAD"
            android:textColor="#FFD600"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="50dp"
            android:paddingBottom="10dp" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MODALIDAD DE COBRO"
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="10dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReglaGanador"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="GANA BANDO (Reparto Resto)"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="12dp"
                    app:strokeColor="#4DFFFFFF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReglaTodos"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="REPARTO EQUITATIVO (Todos)"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="12dp"
                    app:strokeColor="#4DFFFFFF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReglaUltimo"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="EL ÚLTIMO PAGA TODO"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="25dp"
                    app:strokeColor="#4DFFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CONTROL DE MARCADOR"
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="10dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#1AFFFFFF"
                    app:contentPadding="16dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Solicitar PIN para anotar"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchRequierePin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:thumbTint="@color/white"
                            app:trackTint="#FFD600" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarConfig"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="CERRAR AJUSTES"
            app:backgroundTint="#FFD600"
            android:textColor="#000000"
            android:layout_margin="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panelHistorialDeslizable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2080808"
        android:elevation="40dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        android:translationX="1000dp"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CRÓNICA DE BATALLA"
            android:textColor="#FFD600"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="40dp"
            android:paddingBottom="20dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHistorialLateral"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarHistorial"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="VOLVER A LA ARENA"
            app:backgroundTint="#FFD600"
            android:textColor="#000000"
            android:layout_marginVertical="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panelDespachoDeslizable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2080808"
        android:elevation="45dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone"
        android:translationX="1000dp"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESPACHO DE MUNICIÓN"
            android:textColor="#FFD600"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="40dp"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toca un producto para marcar entrega"
            android:textColor="#80FFFFFF"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginBottom="20dp"
            android:textStyle="italic" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDespachoLateral"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEntregarTodoLateral"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="ENTREGAR TODA LA MUNICIÓN"
            app:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarDespacho"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="VOLVER A LA ARENA"
            android:textColor="#FFFFFF"
            app:strokeColor="#4DFFFFFF"
            android:layout_marginVertical="10dp" />
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieCelebration"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:elevation="50dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_rawRes="@raw/donald" />

</androidx.constraintlayout.widget.ConstraintLayout>