<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#EEEEEE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMetodoPago"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="@drawable/bg_circle_light"
            android:src="@drawable/ic_payments" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreClienteHistorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mesa 5"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/tvHoraHistorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:30 PM"
                android:textSize="12sp"
                android:textColor="#999999"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMontoHistorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 50.000"
                android:textStyle="bold"
                android:textColor="#1B5E20"/>

            <TextView
                android:id="@+id/tvEstadoBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PENDIENTE"
                android:textSize="10sp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:background="@drawable/bg_badge_pending"
                android:textColor="#F57F17"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>