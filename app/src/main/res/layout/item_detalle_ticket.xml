<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- ITEM DEL TICKET -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="12dp">

        <!-- Cantidad -->
        <TextView
            android:id="@+id/tvCantTick"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="2Ã—"
            android:textColor="#2E7D32"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Nombre producto -->
        <TextView
            android:id="@+id/tvNombreProdTick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cerveza Poker"
            android:textColor="#212121"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintStart_toEndOf="@+id/tvCantTick"
            app:layout_constraintEnd_toStartOf="@+id/tvSubtotalTick"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Subtotal -->
        <TextView
            android:id="@+id/tvSubtotalTick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 10.000"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- SEPARADOR TIPO TICKET -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="6dp"
        android:background="@drawable/divider_dashed"/>

</LinearLayout>
