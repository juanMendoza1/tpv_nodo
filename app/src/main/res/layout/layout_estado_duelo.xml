<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#0D0F12"
    app:cardCornerRadius="28dp"
    app:strokeColor="#FFD600"
    app:strokeWidth="1.5dp"
    app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="26dp">

        <!-- ICONO CENTRAL -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_versus"
            app:tint="#FFD600" />

        <!-- TITULO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="ESTADO DEL DUELO"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing="0.12" />

        <!-- DESCRIPCIÓN -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:text="¿Qué deseas hacer con la partida actual?"
            android:textAlignment="center"
            android:textColor="#90A4AE"
            android:textSize="14sp" />

        <!-- BOTÓN CONTINUAR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinuar"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="VOLVER A LA ARENA"
            android:textColor="#FFFFFF"
            app:backgroundTint="#1B5E20"
            app:cornerRadius="14dp"
            app:icon="@drawable/ic_play_arrow"
            app:iconTint="#C8E6C9"
            app:iconGravity="textStart"
            app:elevation="6dp"
            android:layout_marginBottom="14dp" />

        <!-- BOTÓN PAUSAR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPausar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="PAUSAR Y SALIR"
            android:textColor="#00B0FF"
            app:strokeColor="#00B0FF"
            app:strokeWidth="2dp"
            app:cornerRadius="14dp"
            app:icon="@drawable/ic_pause"
            app:iconTint="#00B0FF"
            app:iconGravity="textStart"
            android:layout_marginBottom="14dp" />

        <!-- BOTÓN FINALIZAR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFinalizar"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="ABANDONAR / LIQUIDAR"
            android:textColor="#FF3D00"
            app:icon="@drawable/ic_stop"
            app:iconTint="#FF3D00"
            app:iconGravity="textStart" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
