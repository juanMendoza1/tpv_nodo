<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F0F">

    <View android:id="@+id/bgAzul" android:layout_width="0dp" android:layout_height="match_parent"
        android:background="@drawable/gradient_blue_arena" app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/guidelineCenter" />

    <View android:id="@+id/bgRojo" android:layout_width="0dp" android:layout_height="match_parent"
        android:background="@drawable/gradient_red_arena" app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/guidelineCenter" app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline android:id="@+id/guidelineCenter" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/tvHeaderBillar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MESA #4"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutTopBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvHeaderBillar">

        <FrameLayout
            android:id="@+id/btnVerPendientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:clickable="true"
            android:focusable="true">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:clickable="false"
                android:focusable="false"
                app:backgroundTint="#4D000000"
                app:cornerRadius="26dp"
                app:icon="@drawable/ic_shopping_basket"
                app:iconSize="24dp"
                app:iconTint="#FF1744"
                app:strokeColor="#4DFF1744"
                app:strokeWidth="1dp" />

            <TextView
                android:id="@+id/tvBadgePendientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="3"
                android:textColor="#FF1744"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBolsaExpandible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="#CC000000"
            app:cardCornerRadius="12dp"
            app:strokeColor="#4D00E5FF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvProductoEnJuego"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="BOLSA: $0"
                        android:textColor="#00E5FF"
                        android:textStyle="bold"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/ivFlechaBolsa"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_expand_more"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvItemsBolsa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargue munición..."
                    android:textColor="#B0BEC5"
                    android:textSize="10sp"
                    android:visibility="gone"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <ImageButton
            android:id="@+id/btnAgregarJugadorInd"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_person_add"
            app:tint="#00E5FF"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btnConfigDueloInd"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_settings"
            app:tint="#FFFFFF"
            android:scaleType="centerInside" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/areaCentralIntercambiable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutTopBar"
        app:layout_constraintBottom_toTopOf="@+id/layoutAccionesInferiores">

        <LinearLayout
            android:id="@+id/containerJugadores"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDetalleBolsaExpandida"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#00000000"
            android:paddingVertical="8dp"
            android:clipToPadding="false" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layoutAccionesInferiores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerLog"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="LOG" android:textColor="#FFFFFF" app:strokeColor="#00E5FF" app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fabSeleccionarMunicion"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:text="AÑADIR +" android:textColor="#000000" android:backgroundTint="#FFD600" app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFinalizarDuelo"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="FINALIZAR" android:textColor="#FFFFFF" app:strokeColor="#FF1744" app:cornerRadius="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panelConfigDeslizableInd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2080808"
        android:elevation="100dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:translationX="1000dp"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AJUSTES DE LA ARENA"
            android:textColor="#FFD600"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="50dp"
            android:paddingBottom="10dp" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DIFICULTAD (PUNTOS META)"
                    android:textColor="#80FFFFFF"
                    android:textSize="11sp"
                    android:layout_marginBottom="12dp"
                    android:letterSpacing="0.1"/>

                <com.google.android.material.button.MaterialButton android:id="@+id/btnNivelAficionado" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:layout_width="match_parent" android:layout_height="52dp" android:text="AFICIONADO (20 PTS)" android:textColor="#FFFFFF" android:layout_marginBottom="8dp" app:strokeColor="#00E5FF" />
                <com.google.android.material.button.MaterialButton android:id="@+id/btnNivelIntermedio" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:layout_width="match_parent" android:layout_height="52dp" android:text="INTERMEDIO (25 PTS)" android:textColor="#FFFFFF" android:layout_marginBottom="8dp" app:strokeColor="#FFD54F" />
                <com.google.android.material.button.MaterialButton android:id="@+id/btnNivelAvanzado" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:layout_width="match_parent" android:layout_height="52dp" android:text="AVANZADO (30 PTS)" android:textColor="#FFFFFF" android:layout_marginBottom="8dp" app:strokeColor="#4CAF50" />
                <com.google.android.material.button.MaterialButton android:id="@+id/btnNivelPro" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:layout_width="match_parent" android:layout_height="52dp" android:text="PROFESIONAL (40 PTS)" android:textColor="#FFFFFF" android:layout_marginBottom="24dp" app:strokeColor="#FF1744" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MODALIDAD DE PAGO"
                    android:textColor="#80FFFFFF"
                    android:textSize="11sp"
                    android:layout_marginBottom="12dp"
                    android:letterSpacing="0.1"/>

                <com.google.android.material.button.MaterialButton android:id="@+id/btnReglaPerdedores" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:layout_width="match_parent" android:layout_height="52dp" android:text="PAGAN PERDEDORES" android:textColor="#FFFFFF" android:layout_marginBottom="8dp" app:strokeColor="#FFFFFF" app:icon="@drawable/ic_trending_down" app:iconTint="#FFFFFF"/>
                <com.google.android.material.button.MaterialButton android:id="@+id/btnReglaTodos" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:layout_width="match_parent" android:layout_height="52dp" android:text="REPARTO EQUITATIVO" android:textColor="#FFFFFF" android:layout_marginBottom="8dp" app:strokeColor="#FFFFFF" app:icon="@drawable/ic_groups" app:iconTint="#FFFFFF"/>
                <com.google.android.material.button.MaterialButton android:id="@+id/btnReglaUltimo" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:layout_width="match_parent" android:layout_height="52dp" android:text="EL ÚLTIMO PAGA" android:textColor="#FFFFFF" android:layout_marginBottom="24dp" app:strokeColor="#FFFFFF" app:icon="@drawable/ic_person" app:iconTint="#FFFFFF"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#1AFFFFFF" android:layout_marginBottom="24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SEGURIDAD"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Requerir PIN para registrar impactos"
                            android:textColor="#80FFFFFF"
                            android:textSize="11sp"/>
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchRequierePin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="#FFD600"
                        app:trackTint="#4DFFD600"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarConfigInd"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="CONFIRMAR Y VOLVER"
            app:backgroundTint="#FFD600"
            android:textColor="#000000"
            android:layout_margin="20dp"
            app:cornerRadius="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panelReclutamientoPro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2080808"
        android:elevation="50dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="NUEVO JUGADOR" android:textColor="#80FFFFFF" android:gravity="center" android:textSize="14sp" android:textStyle="bold" android:paddingTop="30dp" android:letterSpacing="0.1" />
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvReclutamiento" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:paddingHorizontal="10dp" android:paddingTop="10dp" android:clipToPadding="false" />
        <com.google.android.material.button.MaterialButton android:id="@+id/btnConfirmarRecluta" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:layout_width="match_parent" android:layout_height="56dp" android:text="TOCA UN CLIENTE" android:layout_marginHorizontal="40dp" android:layout_marginBottom="10dp" android:textColor="#00E5FF" app:strokeColor="#4D00E5FF" app:strokeWidth="1dp" android:enabled="false" app:cornerRadius="28dp" android:textSize="12sp" android:textAllCaps="true" />
        <com.google.android.material.button.MaterialButton android:id="@+id/btnCancelarRecluta" style="@style/Widget.MaterialComponents.Button.TextButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="VOLVER" android:layout_gravity="center" android:textColor="#FF1744" android:textSize="11sp" android:layout_marginBottom="40dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panelDespachoBolsa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2080808"
        android:elevation="60dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:translationX="1000dp"
        android:clickable="true"
        android:focusable="true">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="PEDIDOS POR ENTREGAR" android:textColor="#FF1744" android:gravity="center" android:textSize="18sp" android:textStyle="bold" android:paddingTop="50dp" android:paddingBottom="10dp" android:letterSpacing="0.1" />
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Toca un producto para confirmar que llegó a la mesa" android:textColor="#80FFFFFF" android:gravity="center" android:textSize="11sp" android:paddingBottom="20dp" />
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvDespachoBolsa" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:paddingHorizontal="16dp" />
        <com.google.android.material.button.MaterialButton android:id="@+id/btnCerrarDespacho" style="@style/Widget.MaterialComponents.Button.UnelevatedButton" android:layout_width="match_parent" android:layout_height="60dp" android:text="VOLVER A LA ARENA" app:backgroundTint="#25FFFFFF" android:textColor="#FFFFFF" android:layout_margin="20dp" app:cornerRadius="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panelLiquidacionIndividual"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3080808"
        android:elevation="150dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:translationY="1000dp">

        <TextView
            android:id="@+id/tvTituloLiq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESUMEN DE SALIDA"
            android:textColor="#99FFFFFF"
            android:gravity="center"
            android:textSize="11sp"
            android:textStyle="bold"
            android:paddingTop="40dp"
            android:letterSpacing="0.2" />

        <TextView
            android:id="@+id/tvNombreJugadorLiq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JUGADOR"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="15dp" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_log_hito"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TIEMPO EN MESA"
                        android:textColor="#99FFFFFF"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/tvTiempoTotalLiq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="00:45:12"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOG DE VICTORIAS"
                    android:textColor="#66FFFFFF"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDuelosIndividualLiq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:nestedScrollingEnabled="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_item_log_hito"
                    android:padding="18dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUBTOTAL DEUDA"
                        android:textColor="#00E5FF"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1" />
                    <TextView
                        android:id="@+id/tvTotalPagarLiq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 0.00"
                        android:textColor="#FFFFFF"
                        android:textSize="32sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp"
            android:paddingTop="12dp"
            android:gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVolverDeLiq"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:text="VOLVER"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="10dp"
                app:strokeColor="#33FFFFFF"
                app:cornerRadius="14dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmarSalidaLiq"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1.4"
                android:text="CONFIRMAR"
                android:textSize="12sp"
                app:backgroundTint="#FFD600"
                android:textColor="#000000"
                android:textStyle="bold"
                app:cornerRadius="14dp"
                app:icon="@drawable/ic_check_circle"
                app:iconSize="18dp"
                app:iconTint="#000000" />
        </LinearLayout>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieCelebration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:visibility="gone"
        app:lottie_rawRes="@raw/donald" />

</androidx.constraintlayout.widget.ConstraintLayout>