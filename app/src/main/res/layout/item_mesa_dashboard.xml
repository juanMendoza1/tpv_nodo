<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardMesa"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:strokeColor="#F5F5F5"
    app:strokeWidth="1.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgStatusMesa"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_table_bar"
            app:tint="#BDBDBD" />

        <TextView
            android:id="@+id/tvNumeroMesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="MESA 01"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEstadoMesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISPONIBLE"
            android:textColor="#9E9E9E"
            android:textSize="11sp"
            android:letterSpacing="0.1" />

        <TextView
            android:id="@+id/tvDeudaMesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#1A00E676"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:text="$ 0.000"
            android:textColor="#00C853"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:shadowColor="#00E676"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvTipoJuego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="ðŸŽ± POOL"
            android:visibility="gone"
            android:textColor="#455A64"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>