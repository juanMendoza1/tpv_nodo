<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="#1AFFFFFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="#33FFFFFF"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_payments"
            app:tint="#80FFFFFF"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreItemBolsa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CERVEZA CLUB COLOMBIA"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/tvResponsablePunto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Punto de CLAUDITA"
                android:textColor="#00E5FF"
                android:textSize="11sp"
                android:textStyle="italic"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPrecioItemBolsa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 8.500"
            android:textColor="#FFD600"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>