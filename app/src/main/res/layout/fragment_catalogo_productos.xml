<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilBuscar"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="Buscar producto..."
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etBuscarProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#212121" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProductos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cardResumenContable"
        app:layout_constraintTop_toBottomOf="@id/tilBuscar" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardResumenContable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-10dp"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDFDFD"
        android:orientation="vertical"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp">

            <ImageView
                android:id="@+id/btnMinimizarResumen"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/arrow_up_float"
                app:tint="#444444"
                android:layout_centerVertical="true"
                android:padding="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btnMinimizarResumen"
                android:text="MI APUESTA"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/btnLimpiarApuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="LIMPIAR"
                android:textColor="#FF5252"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutDetalleColapsable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvResumenApuesta"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginVertical="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/tvTotalResumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 0.00"
                    android:textColor="#2E7D32"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFinalizarSeleccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LISTO"
                android:minHeight="40dp"
                app:backgroundTint="#FFD600"
                android:textColor="#000000"
                android:textStyle="bold"
                app:cornerRadius="10dp"/>
        </LinearLayout>
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>