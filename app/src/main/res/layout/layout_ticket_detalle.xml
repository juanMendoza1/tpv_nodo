<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F0F0F0">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@android:color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BILLAR LA EXCELENCIA"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#212121"/>

            <TextView
                android:id="@+id/tvFechaTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="07/01/2026 10:00 PM"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="#757575"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="@drawable/bg_divider_dashed" />

            <TextView
                android:id="@+id/tvClienteTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLIENTE: MESA 5"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDetalleTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TOTAL"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tvTotalTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 0.00"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#1B5E20"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvMetodoTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="PAGO: QR NEQUI"
                android:textSize="12sp"
                android:textStyle="italic"/>

            <Button
                android:id="@+id/btnCerrarTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="VOLVER"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>