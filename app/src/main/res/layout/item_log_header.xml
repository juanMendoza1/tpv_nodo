<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="4dp"
    android:layout_marginHorizontal="10dp"
    app:cardBackgroundColor="#00000000"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="#33FFFFFF"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_ghost_gradient"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_stars"
                app:tint="#FFD600" />

            <TextView
                android:id="@+id/tvTituloHito"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="PUNTO #5 - JUAN"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="13sp"
                android:letterSpacing="0.05" />

            <TextView
                android:id="@+id/tvSubtotalHito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$15.500"
                android:textColor="#FFD600"
                android:textStyle="bold"
                android:textSize="15sp"
                android:shadowColor="#FFD600"
                android:shadowRadius="10" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#26FFFFFF"
            android:layout_marginVertical="8dp" />

        <TextView
            android:id="@+id/tvSnapshotMini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MINIS: Azul 10 | Rojo 5 | Amar 20"
            android:textColor="#80FFFFFF"
            android:textSize="10sp"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>