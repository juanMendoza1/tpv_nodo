<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo claro -->
    <solid android:color="#F1F3F4"/>

    <!-- Bordes redondeados tipo chip -->
    <corners android:radius="16dp"/>

    <!-- Borde sutil -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0"/>

    <!-- Padding interno -->
    <padding
        android:left="10dp"
        android:top="6dp"
        android:right="10dp"
        android:bottom="6dp"/>
</shape>
