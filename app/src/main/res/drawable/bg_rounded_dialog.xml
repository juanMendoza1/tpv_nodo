<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo blanco -->
    <solid android:color="#FFFFFF"/>

    <!-- Esquinas suaves -->
    <corners android:radius="20dp"/>

    <!-- Borde sutil gris -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0"/>

    <!-- Sombra simulada (Material feel) -->
    <padding
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp"/>

</shape>
