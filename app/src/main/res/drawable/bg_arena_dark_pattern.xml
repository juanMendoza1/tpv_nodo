<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo base oscuro -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0E0E0E"/>
        </shape>
    </item>

    <!-- PatrÃ³n diagonal sutil -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#141414"
                android:endColor="#0E0E0E"/>
        </shape>
    </item>

    <!-- Ruido / textura tipo arena -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="600dp"
                android:centerX="0.3"
                android:centerY="0.2"
                android:startColor="#1A1A1A"
                android:endColor="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Sombra inferior para profundidad -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#00000000"
                android:endColor="#66000000"/>
        </shape>
    </item>

</layer-list>
