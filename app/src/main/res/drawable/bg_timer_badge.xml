<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo del badge -->
    <solid android:color="#FF3D3D"/>

    <!-- Forma pill -->
    <corners android:radius="50dp"/>

    <!-- Borde sutil -->
    <stroke
        android:width="1dp"
        android:color="#CCFFFFFF"/>

    <!-- Espaciado interno -->
    <padding
        android:left="10dp"
        android:top="4dp"
        android:right="10dp"
        android:bottom="4dp"/>
</shape>
