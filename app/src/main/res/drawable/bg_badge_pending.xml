<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Amarillo suave / pendiente -->
    <solid android:color="#FFF3CD" />

    <!-- Bordes redondeados -->
    <corners android:radius="12dp" />

    <!-- Borde sutil -->
    <stroke
        android:width="1dp"
        android:color="#FFECB5" />

    <!-- Padding interno -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
