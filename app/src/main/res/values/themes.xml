<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TPVNodo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TPVNodo" parent="Base.Theme.TPVNodo" />

    <style name="MaterialAlertDialog_Garena">
        <item name="android:background">#1A1A1A</item>
        <item name="android:textColor">#FFFFFF</item>

        <item name="materialAlertDialogBodyTextStyle">@style/GarenaBodyText_Style</item>
        <item name="buttonBarPositiveButtonStyle">@style/GarenaButton_Style</item>
    </style>

    <style name="GarenaTitleText_Style" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00E5FF</item>
    </style>

    <style name="GarenaBodyText_Style" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#CCCCCC</item>
    </style>

    <style name="GarenaButton_Style" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">#00E5FF</item>
    </style>

    <!-- Shape grande estilo gamer / arena -->
    <style name="ShapeAppearance.LargeComponent"
        parent="ShapeAppearance.Material3.LargeComponent">

        <!-- Bordes superiores más redondeados (modal / bottom sheet vibe) -->
        <item name="cornerFamily">rounded</item>

        <item name="cornerSizeTopLeft">28dp</item>
        <item name="cornerSizeTopRight">28dp</item>

        <!-- Inferiores un poco más firmes -->
        <item name="cornerSizeBottomLeft">12dp</item>
        <item name="cornerSizeBottomRight">12dp</item>

    </style>

    <style name="MaterialAlertDialog_Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CornerSize16dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize16dp" parent="">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="DialogAnim">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="CustomDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>